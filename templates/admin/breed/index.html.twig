{% extends 'base.html.twig' %}

{% block title %}Les races{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_breed_new') }}">Cr√©er une race</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Les races</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
            {% for breed in breeds %}
            <div class="card">
                <div class="card-body">
                    <h2><b>{{ breed.name }}</b></h2>
                    <hr>
                    <p><b>ID</b> : {{ breed.id }}</p>

                    <p><b>Description</b> : {{ breed.detail }}</p>
                    <p><b>Slug</b> : {{ breed.slug }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_breed_show', {'id': breed.id}) }}">
                        {{ include ('_partials/icons/_eye.html.twig') }}
                    </a>
                    <a href="{{ path('app_breed_edit', {'id': breed.id}) }}">
                        {{ include ('_partials/icons/_edit.html.twig') }}
                    </a>
                </div>
            </div>
            {% else %}
                <div class="cover">Aucune race</div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
