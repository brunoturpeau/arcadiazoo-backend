{% extends 'base.html.twig' %}

{% block title %}Les races{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_breed_new') }}">Créer une race</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Les races</h1>
        <table class="tw-table">
            <thead>
            <tr>
                <th>Race</th>
                <th>Description</th>
                <th>Nombre d'animaux</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for breed in breeds %}
                <tr>
                    <td>{{ breed.name }}</td>
                    <td>{{ breed.detail|u.truncate(50, '...') }}</td>
                    <td class="actions">
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_breed_show', {'id': breed.id}) }}">
                                {{ include ('_partials/icons/_eye.html.twig') }}
                            </a>
                            <a href="{{ path('app_breed_edit', {'id': breed.id}) }}">
                                {{ include ('_partials/icons/_edit.html.twig') }}
                            </a>
                            <div>
                                {{ include('admin/breed/_delete_icon.html.twig') }}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr class="empty" colspan="4"><h2>Aucun résultat</h2></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
