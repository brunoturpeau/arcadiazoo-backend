{% extends 'base.html.twig' %}

{% block title %}Les races{% endblock %}

{% block body %}

    <div class="nav-context">
        <div class="parent">
            <a  href="{{ path('app_breed_index') }}">
                {{ include('_partials/icons/_left-circle.html.twig') }}
            </a>
            <div class="right">
                <a href="{{ path('app_breed_edit', {'id': breed.id}) }}">
                    {{ include('_partials/icons/_edit.html.twig') }}
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <div>
                        {{ include('admin/breed/_delete_icon.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>{{ breed.name }}</h1>
        <table class="table table-sm">
            <tbody>
                <tr>
                    <th>N°</th>
                    <td>{{ breed.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ breed.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>
                        {{ breed.detail }}
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="tw-table table-sm">
            <thead>
            <tr>
                <th>Nom</th>
                <th>&Eacute;tat de santé</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for animal in animals %}
                <tr>
                    <td>{{ animal.name }}</td>
                    <td>{{ animal.health }}</td>
                    <td class="actions">
                        <a href="{{ path('app_animal_show', {'id': animal.id}) }}">
                            {{ include ('_partials/icons/_eye.html.twig') }}
                        </a>
                        <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">
                            {{ include ('_partials/icons/_edit.html.twig') }}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
