{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                <a class="btn" href="{{ path('app_emp_register') }}">Créer un employé</a>
                <a class="btn" href="{{ path('app_veto_register') }}">Créer un vétérinaire</a>
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Utilisateurs</h1>
        <table class="tw-table">
            <thead>
            <tr>
                <th>Nom et prénom</th>
                <th>E-mail</th>
                <th>Rôle</th>
                <th>Statut</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.lastname }} {{ user.firstname }}</td>
                    <td>{{  user.email }}</td>
                    <td>
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <b>Administrateur</b>
                        {% elseif 'ROLE_VETERINAIRE' in user.roles %}
                            <b>Vétérinaire</b>
                        {% elseif 'ROLE_EMPLOYE' in user.roles %}
                            <b>Employé(e)</b>
                        {% endif %}
                    </td>
                    <td>
                        {{ user.isVerified ? 'Vérifié' : 'Non vérifié' }}
                    </td>
                    <td class="actions">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="empty" colspan="3"><h2>Aucun résultat</h2></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
