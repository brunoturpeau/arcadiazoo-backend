{% extends 'base.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            {% if is_granted('ROLE_VETERINAIRE') %}
                <a  href="{{ path('app_report_index') }}">
                    {{ include('_partials/icons/_left-circle.html.twig') }}
                </a>
            {% endif %}
            <div class="right">
                {% if is_granted('ROLE_VETERINAIRE') %}
                    <a href="{{ path('app_report_edit', {'id': report.id}) }}">
                        {{ include('_partials/icons/_edit.html.twig') }}
                    </a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <span class="ms-3">
                        {{ include('admin/report/_delete_icon.html.twig') }}
                    </span>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Rapport</h1>
        <div class="flex justify-center">
            <div class="card-show">
                <h2>{{ report.date ? report.date|date('d/m/Y') : '' }}</h2>
                <hr>
                <p><b>ID</b> : {{ report.id }}</p>
                <p><b>Rapport</b> : {{ report.detail }}</p>
            </div>
        </div>
    </div>
{% endblock %}
