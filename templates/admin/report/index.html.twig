{% extends 'base.html.twig' %}

{% block title %}Rapports{% endblock %}

{% block body %}

    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_VETERINAIRE') %}
                    <a class="btn" href="{{ path('app_report_new') }}">Cr√©er un rapport</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Les Rapports</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
            {% for report in reports %}
            <div class="card">
                <div class="card-body h-full">
                    <p><b>{{ report.date ? report.date|date('d-m-Y') : '' }}</b></p>
                    <hr class="hr">
                    <p>{{ report.detail }}</p>
                </div>
                <div class="card-footer w-full">
                    {% if is_granted('ROLE_VETERINAIRE') %}
                        <a href="{{ path('app_report_show', {'id': report.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                    {% endif %}
                    {% if is_granted('ROLE_VETERINAIRE') %}
                        <a href="{{ path('app_report_edit', {'id': report.id}) }}">
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                    {% endif %}
                </div>
            </div>
            {% else %}
                <div class="cover">Aucun rapport</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
