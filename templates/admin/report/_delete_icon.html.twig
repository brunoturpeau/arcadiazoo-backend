{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('app_report_delete', {'id': report.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce rapport?');">
{% else %}
    <form method="post" action="{{ path('app_veto_report_delete', {'id': report.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce rapport?');">
{% endif %}
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ report.id) }}">
    <button>
        {{ include('_partials/icons/_trash.html.twig') }}
    </button>
</form>
