{% extends 'base.html.twig' %}

{% block title %}Les animaux{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_animal_new') }}">Cr√©er un animal</a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Les animaux</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
            {% for animal in animals %}
               <div class="card">
                   <div class="card-body">
                       <h2>{{ animal.name }}</h2>
                       <hr class="hr">
                       <p>Race : {{ animal.breed.name }}</p>
                       <p>{{ animal.health }}</p>
                   </div>
                   <div class="card-footer">
                       <a href="{{ path('app_animal_show', {'id': animal.id}) }}">
                           {{ include ('_partials/icons/_eye.html.twig') }}
                       </a>
                       <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">
                           {{ include ('_partials/icons/_edit.html.twig') }}
                       </a>
                   </div>
               </div>
            {% else %}
                <div class="cover">Aucun animal</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
