{% extends 'base.html.twig' %}

{% block title %}Dashboard - Arcadia Zoo
{% endblock %}

{% block body %}
	<div class="cont">
		<h1>Arcadia Zoo - Administration</h1>

		<div id="accordion-collapse" data-accordion="collapse">
			<h2>Habitat : La savane</h2>
			{% for habitat in habitats %}
				{% if habitat.name == 'Savane' %}
					<p class="mb-5">
						<b>Commentaire</b>
						:
						{{ habitat.commentHabitat }}
						<a href="{{ path('app_habitat_comment_edit', {'id': habitat.id}) }}">
							{{ include('_partials/icons/_edit.html.twig') }}
						</a>
					</p>
				{% endif %}
			{% endfor %}
			<h3 id="accordion-collapse-heading-1">
				<button type="button" class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3" data-accordion-target="#accordion-collapse-body-1" aria-expanded="true" aria-controls="accordion-collapse-body-1">
					<span>Les animaux de la savane</span>
					<svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 10 6">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
					</svg>
				</button>
			</h3>
			<div id="accordion-collapse-body-1" class="hidden" aria-labelledby="accordion-collapse-heading-1">
				<div class="card-to-table">
					<div class="thead">
						<div class="row">
							<div>Animal</div>
							<div>Race</div>
							<div>&Eacute;tat de santé</div>
							<div></div>
						</div>
					</div>
					<div class="tbody">
						{% for savannahAnimal in savannahAnimals %}
							<div class="item">
								<div>
									<h3>{{ savannahAnimal.name }}</h3>
								</div>
								<div>
									{{ savannahAnimal.breed }}
								</div>
								<div>
									{{ savannahAnimal.health }}
								</div>
								<div class="actions">
									<div>
										<a href="{{ path('app_animal_show', {'id': savannahAnimal.id}) }}">
											{{ include('_partials/icons/_eye.html.twig') }}
										</a>
									</div>
									{% if is_granted('ROLE_ADMIN') %}
										<div>
											<a href="{{ path('app_animal_edit', {'id': savannahAnimal.id}) }}">
												{{ include ('_partials/icons/_edit.html.twig') }}
											</a>
										</div>
									{% endif %}
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>

