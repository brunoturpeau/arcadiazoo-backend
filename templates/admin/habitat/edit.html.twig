{% extends 'base.html.twig' %}

{% block title %}Modifier un habitat{% endblock %}

{% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    <script src="{{ asset('assets/js/ckeditor.js') }}" defer></script>
{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">

            <div class="right">
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="btn-danger">
                        {{ include('admin/habitat/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">

        <h1>Modifier un habitat</h1>
        <div class="card-show">
                {{ include('admin/habitat/_form.html.twig', {'button_label': 'Enregistrer'}) }}
            </div>
        </div>
    </div>
{% endblock %}
