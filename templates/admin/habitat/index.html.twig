{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_habitat_new') }}">Cr√©er un habitat</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Les habitats</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
            {% for habitat in habitats %}
                <div class="card">
                    <div class="card-body">
                        <h2>{{ habitat.name }}</h2>
                        <hr class="hr">
                        <p class="mb-3">{{ habitat.description }}</p>
                        <p>{{ habitat.commentHabitat }}</p>
                    </div>
                    <div class="card-footer">
                        {% if is_granted('ROLE_VETERINAIRE') %}
                            <a href="{{ path('app_habitat_show', {'id': habitat.id}) }}">
                                {{ include('_partials/icons/_eye.html.twig') }}
                            </a>
                        {% endif %}

                        {% if is_granted('ROLE_VETERINAIRE') %}
                            <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}">
                                {{ include('_partials/icons/_edit.html.twig') }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="cover">Aucun habitat</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
