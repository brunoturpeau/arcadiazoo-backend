{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_habitat_new') }}">Cr√©er un habitat</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Les habitats</h1>
        <table class="tw-table">
            {# TODO label: nombre d'animaux #}
            <thead>
            <tr>
                <th>Service</th>
                <th>Description</th>
                <th>Commentaire</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for habitat in habitats %}
                <tr>
                    <td><b>{{ habitat.name }}</b></td>
                    <td>
                        {{ habitat.description|u.truncate(50, '...') }}
                    </td>
                    <td>
                        <a href="{{ path('app_habitat_comment_edit', {'id': habitat.id}) }}">
                            {{ habitat.commentHabitat|u.truncate(50, '...') }}
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                    </td>
                    <td class="actions">
                        <a href="{{ path('app_habitat_show', {'id': habitat.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}">
                                {{ include('_partials/icons/_edit.html.twig') }}
                            </a>
                            <div>
                                {{ include('admin/habitat/_delete_icon.html.twig') }}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr class="empty" colspan="4"><h2>Aucun habitat</h2></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
