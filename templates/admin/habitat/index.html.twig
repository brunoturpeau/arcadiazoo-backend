{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block body %}
    <div id="btn-create">
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn" href="{{ path('app_habitat_new') }}">Créer un habitat</a>
        {% endif %}
    </div>
    <div class="cont">
        <h1>Les habitats</h1>
        <div class="card-to-table">
            <div class="thead">
                <div class="row">
                    <div>Service</div>
                    <div>Description</div>
                    <div>Commentaire</div>
                    <div></div>
                </div>
            </div>
            <div class="tbody">
                {% for habitat in habitats %}
                    <div class="item">
                        <div>{{ habitat.name }}</div>
                        <div>{{ habitat.description|u.truncate(50, '...') }}</div>
                        <div>
                            {{ habitat.commentHabitat|u.truncate(50, '...') }}
                        </div>
                        <div class="actions">
                            <div>
                                <a href="{{ path('app_habitat_show', {'id': habitat.id}) }}">
                                    {{ include('_partials/icons/_eye.html.twig') }}
                                </a>
                            </div>
                            {% if is_granted('ROLE_ADMIN') %}
                                <div>
                                    <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}">
                                        {{ include('_partials/icons/_edit.html.twig') }}
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div>Aucun résultat</div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
