{% extends 'base.html.twig' %}

{% block title %}Habitat{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            {% if is_granted('ROLE_VETERINAIRE') %}
                <a  href="{{ path('app_habitat_index') }}">
                    {{ include('_partials/icons/_left-circle.html.twig') }}
                </a>
            {% endif %}

            <div class="right">
                {% if is_granted('ROLE_VETERINAIRE') %}
                    <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}">
                        {{ include('_partials/icons/_edit.html.twig') }}
                    </a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <span class="ms-3">
                        {{ include('admin/habitat/_delete_icon.html.twig') }}
                    </span>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Habitat</h1>
        <div class="flex justify-center">
            <div class="card-show">
                <h2>{{ habitat.name }}</h2>
                <hr>
                <p><b>ID</b> : {{ habitat.id }}</p>
                <p><b>Description</b> : {{ habitat.description }}</p>
                <p><b>Commentaire</b> : {{ habitat.commentHabitat }}</p>
                <p><b>Slug</b> : {{ habitat.slug }}</p>
            </div>
        </div>
    </div>
{% endblock %}
