{% extends 'base.html.twig' %}

{% block title %}Habitat{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <a  href="{{ path('app_habitat_index') }}">
                {{ include('_partials/icons/_left-circle.html.twig') }}
            </a>

            <div class="right">
                {% if is_granted('ROLE_VETERINAIRE') %}
                    comment
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}">
                        {{ include('_partials/icons/_edit.html.twig') }}
                    </a>
                    <div>
                        {{ include('admin/habitat/_delete_icon.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Habitat</h1>
        <table class="table table-sm">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ habitat.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ habitat.commentHabitat }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ habitat.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
