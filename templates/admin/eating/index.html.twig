{% extends 'base.html.twig' %}

{% block title %}Nourriture{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="cont">
        <h1>Nourriture</h1>

        <table class="table">
            <thead>
            <tr>
                <th>N°</th>
                <th>Nourriture</th>
                <th>Quantité</th>
                <th>Repas</th>
                <th>Animal</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for eating in eatings %}
                <tr>
                    <td>{{ eating.id }}</td>
                    <td>{{ eating.feeding }}</td>
                    <td>{{ eating.quantity }}</td>
                    <td>
                        <a href="{{ path('app_food_show', {'id': eating.food.id}) }}">
                            Repas #{{ eating.food.id }} {{ include('_partials/icons/_link.html.twig') }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('app_animal_show',{ 'id': eating.food.animal.id}) }}">
                            {{ eating.food.animal.name}} {{ include('_partials/icons/_link.html.twig') }}
                        </a>
                    </td>
                    <td class="actions">
                        <a href="{{ path('app_eating_show', {'id': eating.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                        <a href="{{ path('app_eating_edit', {'id': eating.id}) }}">
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
