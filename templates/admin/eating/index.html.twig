{% extends 'base.html.twig' %}

{% block title %}Nourriture{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_eating_new') }}">Créer un repas</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Nourriture</h1>

        <table class="table">
            <thead>
            <tr>
                <th>N°</th>
                <th>Nourriture</th>
                <th>Quantité</th>
                <th>Repas</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for eating in eatings %}
                <tr>
                    <td>{{ eating.id }}</td>
                    <td>{{ eating.feeding }}</td>
                    <td>{{ eating.quantity }}</td>
                    <td>Repas #{{ eating.food.id }} pour {{ eating.food.animal.name}} </td>
                    <td>
                        <a href="{{ path('app_eating_show', {'id': eating.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                        <a href="{{ path('app_eating_edit', {'id': eating.id}) }}">
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
