{% extends 'base.html.twig' %}

{% block title %}Nourriture{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <a  href="{{ path('app_eating_index') }}">
                {{ include('_partials/icons/_left-circle.html.twig') }}
            </a>
            <div class="right">
                <a class="btn" href="{{ path('app_eating_edit', {'id': eating.id}) }}">
                    Modifier la nourriture
                </a>
                <div>{{ include('admin/eating/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Nourriture</h1>
        <table class="table table-sm">
            <tbody>
            <tr>
                <th>N°</th>
                <td>{{ eating.id }}</td>
            </tr>
            <tr>
                <th>Nourriture</th>
                <td>{{ eating.feeding }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ eating.quantity }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ eating.createdAt ? eating.createdAt|date('m-d-Y') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
