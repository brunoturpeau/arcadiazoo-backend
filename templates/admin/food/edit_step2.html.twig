{% extends 'base.html.twig' %}

{% block title %}Modifier un repas - Ã©tape 2{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <a  href="{{ path('app_food_index') }}">
                {{ include('_partials/icons/_left-circle.html.twig') }}
            </a>
            <div class="right">
                <div class="btn">
                    {{ include('admin/food/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Repas du {{ food.createdAt|date('d-m-Y') }} pour {{ food.animal.name }}</h1>
        <div class="flex flex-col justify-center items-center">
            <div class="bg-slate-200 p-10 lg:w-1/2">
                <p>Repas : {{ food.id }}</p>
                <p>Date : {{ food.createdAt|date('d-m-Y') }}</p>
                <p>Heure : {{ food.time|date('H:i') }}</p>
                <p>Animal : {{ food.animal.name }}</p>
                <h2 class="mt-3">Composition du repas</h2>
                <hr class="mt-2">
                <table class="table bg-white">
                    {% for eating in eatings %}
                        {% if food.id == eating.food.id %}
                        <tr>
                            <td>{{ eating.feeding }}</td>
                            <td>{{ eating.quantity }}</td>
                            <td>
                                <a href="#">
                                    {{ include('_partials/icons/_edit.html.twig') }}
                                </a>
                                <div>
                                    {{ include('admin/eating/_delete_icon.html.twig') }}
                                </div>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </table>
                <h2>Ajouter</h2>
                {{ include('admin/food/_form_step_two.html.twig', {'button_label': 'Enregistrer'}) }}
            </div>
        </div>

    </div>

{% endblock %}
