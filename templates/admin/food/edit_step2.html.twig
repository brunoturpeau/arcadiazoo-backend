{% extends 'base.html.twig' %}

{% block title %}Modifier un repas - étape 2{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <a  href="{{ path('app_food_index') }}">
                {{ include('_partials/icons/_left-circle.html.twig') }}
            </a>
            <div class="right">
                <div class="btn">
                    {{ include('admin/food/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Modifier un repas - étape 2</h1>
        <div class="flex flex-col justify-center items-center">
            <div class="bg-slate-200 p-10 lg:w-1/2">
                {{ include('admin/food/_form.html.twig', {'button_label': 'Enregistrer'}) }}
                <table class="table">
                    {% for eating in eatings %}
                        {% if food.id == eating.food.id %}
                        <tr>
                            <td>{{ eating.feeding }}</td>
                            <td>{{ eating.quantity }}</td>
                            <td>
                                <a href="#">
                                    {{ include('_partials/icons/_edit.html.twig') }}
                                </a>
                                <div>
                                    {{ include('admin/eating/_delete_icon.html.twig') }}
                                </div>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </table>
            </div>
        </div>

    </div>

{% endblock %}
