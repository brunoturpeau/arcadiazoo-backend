{% extends 'base.html.twig' %}

{% block title %}Les services{% endblock %}

{% block body %}
    <div class="cont">
        <div class="flex justify-end">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn" href="{{ path('app_service_new') }}">Créer un service</a>
            {% endif %}
        </div>
        <h1>Les services</h1>
        <table class="tw-flex-table">
            <thead>
            <tr>
                <th>Service</th>
                <th>Description</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr class="item">
                    <td>{{ service.name }}</td>
                    <td>{{ service.description|u.truncate(50, '...') }}</td>
                    <td class="actions">
                        <a class="btn" href="{{ path('app_service_show', {'id': service.id}) }}">
                            {{ include ('_partials/icons/_eye.html.twig') }}
                        </a>
                        <a class="btn" href="{{ path('app_service_edit', {'id': service.id}) }}">
                            {{ include ('_partials/icons/_edit.html.twig') }}
                        </a>

                        {% if is_granted('ROLE_ADMIN') %}
                            <div>
                                {{ include('admin/service/_delete_icon.html.twig') }}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr colspan="4">Aucun résultat</tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
