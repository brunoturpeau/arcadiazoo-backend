{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            {% if is_granted('ROLE_EMPLOYE') %}
                <a  href="{{ path('app_service_index') }}">
                    {{ include('_partials/icons/_left-circle.html.twig') }}
                </a>
            {% endif %}
            <div class="right">
                {% if is_granted('ROLE_EMPLOYE') %}
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}">
                        {{ include('_partials/icons/_edit.html.twig') }}
                    </a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <span class="ms-3">
                        {{ include('admin/service/_delete_icon.html.twig') }}
                    </span>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="cont">
        <h1>Service</h1>
        <div class="flex justify-center">
            <div class="card-show">
                <h2>{{ service.name }}</h2>
                <hr>
                <p><b>ID</b> : {{ service.id }}</p>
                <p><b>Description</b> : {{ service.description }}</p>
                <p><b>Slug</b> : {{ service.slug }}</p>
                <p>
                    <b>Date de cr√©ation</b> : {{ service.createdAt ? service.createdAt|date('d/m/Y ') : '' }}
                </p>

            </div>
        </div>
    </div>
{% endblock %}
