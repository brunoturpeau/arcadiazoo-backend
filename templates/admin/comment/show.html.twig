{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            {% if is_granted('ROLE_EMPLOYE') %}
                <a  href="{{ path('app_comment_index') }}">
                    {{ include('_partials/icons/_left-circle.html.twig') }}
                </a>
            {% endif %}

            <div class="right">
                {% if is_granted('ROLE_EMPLOYE') %}
                    <a class="btn" href="{{ path('app_comment_edit', {'id': comment.id}) }}">
                        {{ include('_partials/icons/_edit.html.twig') }}
                        Modifier
                    </a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="btn">
                        {{ include('admin/comment/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Commentaire</h1>
        <div class="flex flex-col items-center sm:w-3/4 lg:w-1/2 gap-5 mx-auto justify-center">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Date</th>
                        <td>{{ comment.createdAt ? comment.createdAt|date('d/m/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ comment.pseudo }}</td>
                    </tr>
                    <tr>
                        <th>Commentaire</th>
                        <td>{{ comment.commentText }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ comment.isVisible ? 'Publié' : 'Pas publié' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
