{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            {% if is_granted('ROLE_EMPLOYE') %}
                <a  href="{{ path('app_comment_index') }}">
                    {{ include('_partials/icons/_left-circle.html.twig') }}
                </a>
            {% endif %}

            <div class="right">
                {% if is_granted('ROLE_EMPLOYE') %}
                    <a class="btn" href="{{ path('app_comment_edit', {'id': comment.id}) }}">
                        {{ include('_partials/icons/_edit.html.twig') }}
                        Modifier
                    </a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="btn">
                        {{ include('admin/comment/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Commentaire</h1>
        <div class="flex justify-center">
            <div class="card-show">
                <h2>{{ comment.pseudo }}</h2>
                <hr>
                <p><b>ID</b> : {{ comment.id }}</p>
                <p><b>Commentaire </b>: {{ comment.commentText }}</p>
                <p><b>Statut</b> : {{ comment.isVisible ? 'Publié' : 'Pas publié' }}</p>
                <p><b>Date de création</b> : {{ comment.createdAt ? comment.createdAt|date('d/m/Y') : '' }}</p>
            </div>
        </div>
    </div>
{% endblock %}
