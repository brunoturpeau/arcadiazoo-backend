{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
{% else %}
    <form method="post" action="{{ path('app_emp_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
{% endif %}
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button>
        {{ include('_partials/icons/_trash.html.twig') }}
    </button>
</form>
