{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="cont">
        <h1>Les commentaires</h1>
        <table class="tw-table">
            {# TODO action: valider un commentaire #}
            <thead>
            <tr>
                <th>Date</th>
                <th>Pseudo</th>
                <th>Commentaire</th>
                <th>Statut</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.createdAt|date('d-m-Y') }}</td>
                    <td><b>{{ comment.pseudo }}</b></td>
                    <td>{{ comment.commentText|u.truncate(50, '...') }}</td>
                    <td>{{ comment.visible  ? 'Publié' : 'Brouillon' }}</td>
                    <td class="actions">
                        <a href="{{ path('app_comment_show', {'id': comment.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>

                        <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                        <div>
                            {{ include('admin/comment/_delete_icon.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr class="empty" colspan="5"><h2>Aucun résultat</h2></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
