{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <div class="nav-context">
        <div class="parent">
            <div></div>
            <div id="btn-create">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn" href="{{ path('app_comment_new') }}">Cr√©er un commentaire</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cont">
        <h1>Les commentaires</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
            {% for comment in comments %}
                <div class="card">
                    <div class="card-body">
                        <h2>{{ comment.pseudo }}</h2>
                        <hr class="hr">
                        <p class="mb-3">{{ comment.commentText }}</p>
                        <p>{{ comment.isVisible ? 'Yes' : 'No' }}</p>
                    </div>
                    <div class="card-footer">
                        {% if is_granted('ROLE_EMPLOYE') %}
                            <a href="{{ path('app_comment_show', {'id': comment.id}) }}">
                                {{ include('_partials/icons/_eye.html.twig') }}
                            </a>
                        {% endif %}

                        {% if is_granted('ROLE_EMPLOYE') %}
                            <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">
                                {{ include('_partials/icons/_edit.html.twig') }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="cover">Aucun habitat</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
