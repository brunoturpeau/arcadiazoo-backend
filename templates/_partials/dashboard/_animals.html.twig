<h2>Les animaux de la savane</h2>
<div class="card-to-table">
    <div class="thead">
        <div class="row">
            <div>Animal</div>
            <div>Race</div>
            <div>&Eacute;tat de santé</div>
            <div></div>
        </div>
    </div>
    <div class="tbody">
        {% for animal in animals  %}
            <div class="item">
                <div>
                    <h3>{{ animal.name }}</h3>
                </div>
                <div>
                    {{ animal.breed.name }}
                </div>
                <div>
                    {{ animal.health|u.truncate(50, '...') }}
                </div>
                <div class="actions">
                    <a class="hidden" href="{{ path('app_animal_show', {'id': animal.id}) }}">
                        {{ include ('_partials/icons/_eye.html.twig') }}
                    </a>
                    <a class="btn" href="{{ path('app_animal_show', {'id': animal.id}) }}">
                        Voir la fiche
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">
                            {{ include ('_partials/icons/_edit.html.twig') }}
                        </a>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div>Aucun résultat</div>
        {% endfor %}
    </div>
</div>

