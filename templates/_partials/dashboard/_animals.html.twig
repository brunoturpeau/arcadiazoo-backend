<h2>Les animaux de la savane</h2>

<div class="card-to-table">
    <div class="thead">
        <div class="row">
            <div>Animal</div>
            <div>Race</div>
            <div>&Eacute;tat de sant√©</div>
            <div></div>
        </div>
    </div>
    <div class="tbody">
        {% for savannahAnimal in savannahAnimals %}
            <div class="item">
                <div>
                    <h3>{{ savannahAnimal.name }}</h3>
                </div>
                <div>
                    {{ savannahAnimal.breed }}
                </div>
                <div>
                    {{ savannahAnimal.health }}
                </div>
                <div class="actions">
                    <a class="hidden" href="{{ path('app_animal_show', {'id': savannahAnimal.id}) }}">
                        {{ include ('_partials/icons/_eye.html.twig') }}
                    </a>
                    <a class="btn" href="{{ path('app_animal_show', {'id': savannahAnimal.id}) }}">
                        Voir la fiche
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_animal_edit', {'id': savannahAnimal.id}) }}">
                            {{ include ('_partials/icons/_edit.html.twig') }}
                        </a>
                    {% endif %}
                </div>
            </div>

        {% endfor %}
    </div>
</div>

