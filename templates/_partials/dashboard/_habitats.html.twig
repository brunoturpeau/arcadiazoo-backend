<h2 id="accordion-flush-heading-habitats">
    <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-habitats" aria-expanded="false" aria-controls="accordion-flush-body-1">
        <span>Les habitats</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
        </svg>
    </button>
</h2>
<div id="accordion-flush-body-habitats" class="hidden" aria-labelledby="accordion-flush-heading-habitats">
    <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <table class="tw-table">
            <thead>
                <tr>
                    <th>Habitat</th>
                    <th>Description</th>
                    <th>Nombre d'animaux</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for habitat in habitats  %}
                <tr>
                    <td>{{ habitat.name }}</td>
                    <td>{{ habitat.description|u.truncate(50, '...') }}</td>
                    <td></td>
                    <td class="flex gap-5">
                        <a href="{{ path('app_habitat_show', {'id': habitat.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}">
                                {{ include('_partials/icons/_edit.html.twig') }}
                            </a>
                        {% endif %}

                    </td>
                </tr>
            {% else %}
                <tr colspan="3">Aucun r√©sultat</tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>