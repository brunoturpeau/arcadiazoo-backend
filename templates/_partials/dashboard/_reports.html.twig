<h2 id="accordion-flush-heading-reports">
    <button type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-reports" aria-expanded="false" aria-controls="accordion-flush-body-1">
        <span>Les rapports</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
        </svg>
    </button>
</h2>
<div id="accordion-flush-body-reports" class="hidden" aria-labelledby="accordion-flush-heading-reports">
    <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <table class="tw-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Animal</th>
                    <th>Rapport</th>
                    <th></th>
                </tr>
            </thead>
            {% for report in reports  %}
                <tr>
                    <td>{{ report.date|date('d-m-Y') }}</td>
                    <td>
                        <a href="{{ path('app_breed_show', {'id': report.animal.id}) }}">
                            {{ report.animal.name }} {{ include('_partials/icons/_link.html.twig') }}
                        </a>
                    </td>
                    <td>{{ report.detail|u.truncate(50, '...') }}</td>
                    <td class="flex gap-5">
                        <a href="{{ path('app_report_show', {'id': report.id}) }}">
                            {{ include('_partials/icons/_eye.html.twig') }}
                        </a>
                        <a href="{{ path('app_report_edit', {'id': report.id}) }}">
                            {{ include('_partials/icons/_edit.html.twig') }}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr colspan="4">Aucun r√©sultat</tr>
            {% endfor %}
        </table>
    </div>
</div>